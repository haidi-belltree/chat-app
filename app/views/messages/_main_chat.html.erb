<div class="main-header">
  <div class="left-header">
    <div class="room-title">
      Room名
    </div>
  </div>
  <div class="right-header">
    <div class="chat-delete-btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="chat-message">
  <div class="message-class">
    <div class="message-profile">
      <div class="member-name">Tom</div>
      <div class="posted-at">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="message-body">
      <div class="message-content">
        おはよう
      </div>
    </div>
  </div>
<div class="message-class">
    <div class="message-profile">
      <div class="member-name">Tom</div>
      <div class="posted-at">2020/3/31(Wed) 12:47:30</div>
    </div>
    <div class="message-body">
      <div class="message-content">
        こんばんは
      </div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: "main-footer", local: true do |f| %>
  <div class="text-form">
    <%= f.text_field :content, class: "form-content", placeholder: "type a message" %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: "hidden" %>
    </label>
  </div>
  <%= f.submit '送信', class: "send-btn" %>
<% end %>